import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int num = scanner.nextInt();

        num = Math.abs(num);          
        while (num >= 10) {
            num = num / 10;
        }

        System.out.println( num);
    }
}
